<div class="container issue-form-container">
  <!-- Bot√≥n de cerrar (X) -->
  <div class="close-btn-container">
    <%= link_to "√ó", issues_path, class: "close-btn", title: "Back to Issues" %>
  </div>

  <h2 class="text-center">New Issue</h2>

  <%= form_with(model: @issue, local: true, class: "issue-form") do |form| %>

    <div class="form-layout">
      <!-- Columna izquierda -->
      <div class="left-column">
        <div class="mb-3">
          <%= form.text_field :subject, class: "form-control large-input", placeholder: "Subject" %>
        </div>

        <div class="mb-3">
          <a href="#" class="add-tag">+ Add tag</a>
        </div>

        <div class="mb-3">
          <%= form.text_area :description, class: "form-control large-textarea", placeholder: "Please add descriptive text to help others better understand this issue" %>
        </div>
      </div>

      <!-- Columna derecha -->
      <div class="right-column">
        <div class="custom-select-box">
          <div class="select-container">
            <span class="select-label">Type</span>
            <%= form.select :issue_type,
              [["Bug", "bug"], ["Question", "question"], ["Enhancement", "enhancement"]],
              {}, class: "form-select custom-select" %>
          </div>
        </div>

        <div class="custom-select-box">
          <div class="select-container">
            <span class="select-label">Severity</span>
            <%= form.select :severity,
              [["Wishlist", "wishlist"], ["Minor", "minor"], ["Normal", "normal"], ["Important", "important"], ["Critical", "critical"]],
              {}, class: "form-select custom-select" %>
          </div>
        </div>

        <div class="custom-select-box">
          <div class="select-container">
            <span class="select-label">Priority</span>
            <%= form.select :priority,
              [["Low", "low"], ["Normal", "normal"], ["High", "high"]],
              {}, class: "form-select custom-select" %>
          </div>
        </div>


        <div class="icon-container">
          <button type="button" class="icon-btn" id="calendar-btn">‚è≥</button>
          <button type="button" class="icon-btn" id="lock-btn">üîí</button>
        </div>

        <div class="date-picker-container">
          <div class="date-picker-popup" id="date-picker"></div>
        </div>

        <div id="locked-text" class="locked-textarea">
          <textarea placeholder="Reason for blocking"></textarea>
        </div>
      </div>
    </div>

    <div class="text-center mt-4">
      <%= form.submit "CREATE", class: "btn btn-create" %>
    </div>

  <% end %>
</div>
