<div class="container issue-form-container">
  <!-- Botón de cerrar (Back to Issues) -->
  <div class="close-btn-container">
    <%= link_to "×", issues_path, class: "close-btn", title: "Back to Issues" %>
  </div>

  <h2 class="text-center">New Issue</h2>

  <%= form_with(model: @issue, local: true, class: "issue-form") do |form| %>

    <!-- Contenedor FLEX para distribuir las columnas -->
    <div class="form-layout">

      <!-- Columna izquierda: Subject, Add Tag, Description -->
      <div class="left-column">
        <!-- Subject -->
        <div class="mb-4">
          <%= form.text_field :subject, class: "form-control large-input", placeholder: "Subject" %>
        </div>

        <!-- Add Tag -->
        <div class="mb-4">
          <a href="#" class="add-tag">+ Add tag</a>
        </div>

        <!-- Description -->
        <div class="mb-4">
          <%= form.text_area :description, class: "form-control large-textarea", rows: 6, placeholder: "Please add descriptive text to help others better understand this issue" %>
        </div>
      </div>

      <!-- Columna derecha: Type, Severity, Priority -->
      <div class="right-column">
        <!-- Type Selector -->
        <div class="custom-select-box mb-3">
          <span class="select-label">Type:</span>
          <%= form.select :issue_type, [["Bug", "bug"], ["Question", "question"], ["Enhancement", "enhancement"]],
            {}, class: "form-select custom-select" %>
        </div>

        <!-- Severity Selector -->
        <div class="custom-select-box mb-3">
          <span class="select-label">Severity:</span>
          <%= form.select :severity, [["Normal", "normal"], ["High", "high"], ["Critical", "critical"]],
            {}, class: "form-select custom-select" %>
        </div>

        <!-- Priority Selector -->
        <div class="custom-select-box">
          <span class="select-label">Priority:</span>
          <%= form.select :priority, [["Low", "low"], ["Normal", "normal"], ["High", "high"]],
            {}, class: "form-select custom-select" %>
        </div>
      </div>

    </div>

    <!-- Create Button -->
    <div class="text-center mt-4">
      <%= form.submit "CREATE", class: "btn btn-create" %>
    </div>
  <% end %>
</div>
