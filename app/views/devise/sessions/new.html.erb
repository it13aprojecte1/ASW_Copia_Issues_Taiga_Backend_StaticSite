<div class="issue-form-container" style="text-align: center; max-width: 500px; margin: 0 auto; padding: 20px;">
  <h2 class="text-center">Iniciar sesión</h2>

  <div style="margin: 20px 0;">
    <%= button_to(
      user_github_omniauth_authorize_path,
      method: :post,
      data: { turbo: false },
      class: "github-login-btn",
      style: "background-color: #24292e; color: white; padding: 15px; text-decoration: none; border-radius: 5px; text-align: center; margin: 0 auto; width: 80%; border: none; cursor: pointer;"
    ) do %>
      <i class="fa fa-github" style="margin-right: 10px;" aria-hidden="true"></i> Iniciar sesión con GitHub
    <% end %>
  </div>

  <div style="margin: 30px 0 20px;">
    <div style="display: flex; align-items: center; margin: 20px 0;">
      <div style="flex-grow: 1; height: 1px; background-color: #ddd;"></div>
      <div style="margin: 0 15px; color: #666;">O</div>
      <div style="flex-grow: 1; height: 1px; background-color: #ddd;"></div>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { style: "width: 80%; margin: 0 auto;" }) do |f| %>
    <div class="form-group" style="margin-bottom: 15px; text-align: left;">
      <%= f.label :email, "Correo electrónico", style: "display: block; margin-bottom: 5px;" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", style: "width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px;" %>
    </div>

    <div class="form-group" style="margin-bottom: 15px; text-align: left;">
      <%= f.label :password, "Contraseña", style: "display: block; margin-bottom: 5px;" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", style: "width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px;" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group" style="margin-bottom: 15px; text-align: left;">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Recordarme" %>
      </div>
    <% end %>

    <div class="form-group" style="margin-top: 20px;">
      <%= f.submit "Iniciar sesión", class: "btn btn-primary", style: "background-color: #0085A1; color: white; padding: 10px 15px; border: none; border-radius: 4px; cursor: pointer; width: 100%;" %>
    </div>
  <% end %>

  <div style="margin-top: 20px;">
    <%= link_to "Registrarse", "/users/sign_up", style: "color: #0085A1; text-decoration: none;" %>
  </div>
</div>