<style>
  .settings-container {
    max-width: 600px;
    margin: 3rem auto;
    padding: 2rem;
    background-color: #f9fafb;
    border-radius: 1rem;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.05);
    font-family: 'Segoe UI', sans-serif;
  }

  .settings-container h1 {
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 1.5rem;
    color: #1f2937;
    text-align: center;
  }

  .settings-menu ul {
    list-style: none;
    padding: 0;
    margin-bottom: 2rem;
  }

  .settings-menu li {
    margin-bottom: 0.75rem;
  }

  .settings-menu a {
    display: block;
    padding: 0.75rem 1rem;
    background-color: #e5e7eb;
    border-radius: 0.5rem;
    text-decoration: none;
    color: #111827;
    transition: background-color 0.2s;
  }

  .settings-menu a:hover {
    background-color: #d1d5db;
  }

  .btn-link {
    display: inline-block;
    margin-top: 1rem;
    color: #3b82f6;
    text-decoration: none;
    font-weight: 500;
  }

  .btn-link:hover {
    text-decoration: underline;
  }
</style>

<div class="settings-container">
  <h1>Configuración</h1>

  <div class="settings-menu">
    <ul>
      <li><%= link_to 'Statuses', settings_statuses_path %></li>
      <li><%= link_to 'Priorities', settings_priorities_path %></li>
      <li><%= link_to 'Types', settings_issue_types_path %></li>
      <li><%= link_to 'Severties', settings_severities_path %></li>
    </ul>
  </div>

  <%= link_to '← Volver a Issues', issues_path, class: 'btn-link' %>
</div>
