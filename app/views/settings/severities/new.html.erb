<style>
  .settings-container {
    max-width: 900px;
    margin: 3rem auto;
    padding: 2rem;
    background-color: #ffffff;
    border-radius: 1rem;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.05);
    font-family: 'Segoe UI', sans-serif;
  }

  .settings-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  .settings-header h1 {
    font-size: 2rem;
    margin: 0;
    color: #333;
  }

  .btn-link {
    color: #3b82f6;
    font-weight: 500;
    text-decoration: none;
  }

  .btn-link:hover {
    text-decoration: underline;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-group label {
    font-size: 1rem;
    font-weight: 500;
    color: #1f2937;
    display: block;
    margin-bottom: 0.5rem;
  }

  .form-control {
    width: 100%;
    padding: 0.75rem;
    font-size: 1rem;
    border: 1px solid #e5e7eb;
    border-radius: 0.375rem;
    background-color: #f3f4f6;
    transition: border-color 0.3s, box-shadow 0.3s;
  }

  .form-control:focus {
    border-color: #3b82f6;
    box-shadow: 0 0 5px rgba(59, 130, 246, 0.5);
  }

  .form-check-input {
    margin-right: 0.5rem;
  }

  /* Estilo del campo de color cuadrado */
  input[type="color"] {
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    width: 40px;
    height: 40px;
    border: 1px solid #ccc;
    border-radius: 4px;
    padding: 0;
    cursor: pointer;
  }

  input[type="color"]:focus {
    border-color: #3b82f6;
    outline: none;
  }

  .btn-primary {
    background-color: #3b82f6;
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 0.375rem;
    text-decoration: none;
    font-weight: 500;
    transition: background-color 0.3s ease;
  }

  .btn-primary:hover {
    background-color: #2563eb;
  }

  .form-actions {
    display: flex;
    justify-content: flex-end;
    margin-top: 2rem;
  }

  .btn-link {
    margin-top: 1rem;
    font-weight: 500;
    text-decoration: none;
    color: #3b82f6;
  }

  .btn-link:hover {
    text-decoration: underline;
  }
</style>

<div class="settings-container">
  <div class="settings-header">
    <h1>Crear Nueva Severidad</h1>
    <%= link_to 'Volver a la lista de Severidades', settings_severities_path, class: 'btn btn-link' %>
  </div>

  <%= form_with(model: [:settings, @severity], local: true) do |form| %>
    <div class="form-group">
      <%= form.label :name, 'Nombre de la Severidad' %>
      <%= form.text_field :name, class: 'form-control', placeholder: 'Ejemplo: Alta, Media, Baja' %>
    </div>

    <div class="form-group">
      <%= form.label :color, 'Color de la Severidad' %>
      <%= form.color_field :color, class: 'form-control', style: 'width: 40px; height: 40px;' %>
    </div>

    <div class="form-group">
      <%= form.label :position, 'PosiciÃ³n' %>
      <%= form.number_field :position, class: 'form-control', value: @severity.position %>
    </div>

    <div class="form-actions">
      <%= form.submit 'Guardar Severidad', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
