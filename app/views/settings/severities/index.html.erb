<div class="settings-container">
  <div class="settings-header">
    <h1>Severidades</h1>
    <%= link_to 'Nueva Severidad', new_settings_severity_path, class: 'btn btn-primary' %>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Color</th>
        <th>Posición</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @severities.each do |severity| %>
        <tr>
          <td><%= severity.name %></td>
          <td>
            <span class="color-sample" style="background-color: <%= severity.color %>; width: 20px; height: 20px; display: inline-block;"></span>

          </td>
          <td><%= severity.position %></td>
          <td>
            <%= link_to 'Editar', edit_settings_severity_path(severity), class: 'btn btn-sm btn-secondary' %>
            <%= form_with url: settings_severity_path(severity), method: :delete, class: 'd-inline' do %>
              <%= submit_tag 'Eliminar', class: 'btn btn-sm btn-danger', data: { confirm: '¿Estás seguro?' } %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'Volver a Configuración', settings_path, class: 'btn btn-link' %>
</div>