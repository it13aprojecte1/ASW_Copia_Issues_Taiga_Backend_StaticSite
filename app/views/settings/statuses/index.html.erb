<div class="settings-container">
  <div class="settings-header">
    <h1>Estados</h1>
    <%= link_to 'Nuevo Estado', new_settings_status_path, class: 'btn btn-primary' %>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Color</th>
        <th>Es cerrado</th>
        <th>Posición</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @statuses.each do |status| %>
        <tr>
          <td><%= status.name %></td>
          <td>
            <span class="color-sample" style="background-color: <%= status.color %>"></span>
            <%= status.color %>
          </td>
          <td><%= status.is_closed ? 'Sí' : 'No' %></td>
          <td><%= status.position %></td>
          <td>
            <%= link_to 'Editar', edit_settings_status_path(status), class: 'btn btn-sm btn-secondary' %>
            <%= link_to 'Eliminar', settings_status_path(status), method: :delete,
                data: { confirm: '¿Estás seguro?' }, class: 'btn btn-sm btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'Volver a Configuración', settings_path, class: 'btn btn-link' %>
</div>
