<style>
  .settings-container {
    max-width: 900px;
    margin: 3rem auto;
    padding: 2rem;
    background-color: #ffffff;
    border-radius: 1rem;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.05);
    font-family: 'Segoe UI', sans-serif;
  }

  .settings-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  .settings-header h1 {
    font-size: 2rem;
    margin: 0;
  }

  .btn.btn-primary {
    background-color: #3b82f6;
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 500;
  }

  .btn.btn-primary:hover {
    background-color: #2563eb;
  }

  .table {
    width: 100%;
    border-collapse: collapse;
  }

  .table thead th {
    text-align: left;
    padding: 0.75rem;
    background-color: #f3f4f6;
    border-bottom: 2px solid #e5e7eb;
    font-weight: 600;
  }

  .table tbody td {
    padding: 0.75rem;
    border-bottom: 1px solid #e5e7eb;
    vertical-align: middle;
  }

  .color-sample {
    border-radius: 4px;
    border: 1px solid #ccc;
  }

  .btn-sm {
    padding: 0.25rem 0.5rem;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    text-decoration: none;
    margin-right: 0.5rem;
  }

  .btn-secondary {
    background-color: #e5e7eb;
    color: #1f2937;
  }

  .btn-secondary:hover {
    background-color: #d1d5db;
  }

  .btn-danger {
    background-color: #ef4444;
    color: white;
  }

  .btn-danger:hover {
    background-color: #dc2626;
  }

  .btn-link {
    display: inline-block;
    margin-top: 2rem;
    color: #3b82f6;
    text-decoration: none;
    font-weight: 500;
  }

  .btn-link:hover {
    text-decoration: underline;
  }
</style>

<div class="settings-container">
  <div class="settings-header">
    <h1>Estados</h1>
    <%= link_to 'Nuevo Estado', new_settings_status_path, class: 'btn btn-primary' %>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Color</th>
        <th>Es cerrado</th>
        <th style="text-align: left;">Posición</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @statuses.each do |status| %>
        <tr>
          <td><%= status.name %></td>
          <td>
            <span class="color-sample" style="background-color: <%= status.color %>; width: 20px; height: 20px; display: inline-block;"></span>
          </td>
          <td><%= status.is_closed ? 'Sí' : 'No' %></td>
          <td style="text-align: middle;"><%= status.position %></td>
          <td>
            <%= link_to 'Editar', edit_settings_status_path(status), class: 'btn btn-sm btn-secondary' %>
            <%= link_to 'Eliminar', confirm_destroy_settings_status_path(status), class: 'btn btn-sm btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to '← Volver a Configuración', settings_path, class: 'btn-link' %>
</div>
