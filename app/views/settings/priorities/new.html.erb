<style>
  .settings-container {
    max-width: 900px;
    margin: 3rem auto;
    padding: 2rem;
    background-color: #ffffff;
    border-radius: 1rem;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.05);
    font-family: 'Segoe UI', sans-serif;
  }

  .settings-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  .settings-header h1 {
    font-size: 2rem;
    margin: 0;
    color: #333;
  }

  .btn-primary {
    background-color: #3b82f6;
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 0.375rem;
    font-weight: 500;
    text-decoration: none;
    transition: background-color 0.3s;
  }

  .btn-primary:hover {
    background-color: #2563eb;
  }

  .btn-link {
    color: #3b82f6;
    text-decoration: none;
    font-weight: 500;
  }

  .btn-link:hover {
    text-decoration: underline;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-group label {
    font-size: 1rem;
    font-weight: 500;
    color: #1f2937;
  }

  .form-control {
    width: 100%;
    padding: 0.75rem;
    font-size: 1rem;
    border: 1px solid #e5e7eb;
    border-radius: 0.375rem;
    background-color: #f3f4f6;
  }

  .form-control:focus {
    border-color: #3b82f6;
    box-shadow: 0 0 5px rgba(59, 130, 246, 0.5);
  }

  .form-check-input {
    margin-right: 0.5rem;
  }

  .form-actions {
    display: flex;
    justify-content: flex-end;
    margin-top: 2rem;
  }

  .btn-sm {
    font-size: 0.875rem;
    padding: 0.375rem 0.75rem;
    border-radius: 0.375rem;
  }

  .btn-secondary {
    background-color: #6c757d;
    color: white;
    transition: background-color 0.3s;
  }

  .btn-secondary:hover {
    background-color: #5a6268;
  }

  .btn-danger {
    background-color: #dc3545;
    color: white;
    transition: background-color 0.3s;
  }

  .btn-danger:hover {
    background-color: #c82333;
  }

  .color-picker-wrapper {
    display: flex;
    align-items: center;
  }

  .color-sample {
    width: 20px;
    height: 20px;
    margin-left: 10px;
    border-radius: 50%;
  }
</style>

<div class="settings-container">
  <div class="settings-header">
    <h1>Crear Nueva Prioridad</h1>
    <%= link_to 'Volver a la lista de Prioridades', settings_priorities_path, class: 'btn btn-link' %>
  </div>

  <%= form_with(model: [:settings, @priority], local: true) do |form| %>
    <div class="form-group">
      <%= form.label :name, 'Nombre de la Prioridad' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :color, 'Color de la Prioridad' %>
      <div class="color-picker-wrapper">
      <%= form.color_field :color, class: 'form-control', style: 'width: 40px; height: 40px;padding: 0' %>
        <span class="color-sample" style="background-color: <%= @priority.color %>;"></span>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :position, 'PosiciÃ³n' %>
      <%= form.number_field :position, class: 'form-control' %>
    </div>

    <div class="form-actions">
      <%= form.submit 'Guardar Prioridad', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
