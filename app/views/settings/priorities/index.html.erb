<style>
  .settings-container {
    max-width: 900px;
    margin: 3rem auto;
    padding: 2rem;
    background-color: #ffffff;
    border-radius: 1rem;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.05);
    font-family: 'Segoe UI', sans-serif;
  }

  .settings-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  .settings-header h1 {
    font-size: 2rem;
    margin: 0;
    color: #333;
  }

  .btn-primary {
    background-color: #3b82f6;
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 0.375rem;
    font-weight: 500;
    text-decoration: none;
    transition: background-color 0.3s;
  }

  .btn-primary:hover {
    background-color: #2563eb;
  }

  .btn-link {
    color: #3b82f6;
    text-decoration: none;
    font-weight: 500;
  }

  .btn-link:hover {
    text-decoration: underline;
  }

  .table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 2rem;
  }

  .table th, .table td {
    padding: 1rem;
    text-align: left;
    border-bottom: 1px solid #e5e7eb;
  }

  .table th {
    background-color: #f3f4f6;
    font-weight: 600;
    color: #1f2937;
  }

  .table td {
    background-color: #ffffff;
  }

  .color-sample {
    width: 20px;
    height: 20px;
    display: inline-block;
    border-radius: 50%;
  }

  .table td a {
    margin-right: 0.5rem;
  }

  .form-actions {
    display: flex;
    justify-content: flex-end;
    margin-top: 2rem;
  }

  .btn-sm {
    font-size: 0.875rem;
    padding: 0.375rem 0.75rem;
    border-radius: 0.375rem;
  }

  .btn-secondary {
    background-color: #6c757d;
    color: white;
    transition: background-color 0.3s;
  }

  .btn-secondary:hover {
    background-color: #5a6268;
  }

  .btn-danger {
    background-color: #dc3545;
    color: white;
    transition: background-color 0.3s;
  }

  .btn-danger:hover {
    background-color: #c82333;
  }
</style>

<div class="settings-container">
  <div class="settings-header">
    <h1>Prioridades</h1>
    <%= link_to 'Nueva Prioridad', new_settings_priority_path, class: 'btn btn-primary' %>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Color</th>
        <th>Posición</th>
        <th style="text-align: right;">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @priorities.each do |priority| %>
        <tr>
          <td><%= priority.name %></td>
          <td>
            <span class="color-sample" style="background-color: <%= priority.color %>;"></span>
          </td>
          <td><%= priority.position %></td>
          <td style="text-align: right;">
            <%= link_to 'Editar', edit_settings_priority_path(priority), class: 'btn btn-sm btn-secondary' %>
            <%= link_to 'Eliminar', confirm_destroy_settings_priority_path(priority), class: 'btn btn-sm btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'Volver a Configuración', settings_path, class: 'btn btn-link' %>
</div>
